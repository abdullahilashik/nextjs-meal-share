// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Meal {
  id            Int    @id @default(autoincrement())
  title         String
  slug          String
  summary       String
  instructions  String
  donator_name  String
  donator_email String
  image         String
}
